{
  "source": ["tokens.json"],
  "platforms": {
    "figma": {
      "transformGroup": "js",
      "buildPath": "./",
      "files": [
        {
          "destination": "tokens.figma.json",
          "format": "json/flat",
          "options": {
            "showFileHeader": true
          }
        }
      ]
    },
    "css": {
      "transformGroup": "css",
      "buildPath": "./build/",
      "files": [
        {
          "destination": "tokens.css",
          "format": "css/variables",
          "options": {
            "showFileHeader": true,
            "outputReferences": true
          }
        }
      ]
    },
    "scss": {
      "transformGroup": "scss",
      "buildPath": "./build/",
      "files": [
        {
          "destination": "tokens.scss",
          "format": "scss/variables",
          "options": {
            "showFileHeader": true,
            "outputReferences": true
          }
        }
      ]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "./build/",
      "files": [
        {
          "destination": "tokens.js",
          "format": "javascript/es6",
          "options": {
            "showFileHeader": true
          }
        },
        {
          "destination": "tokens.json",
          "format": "json/nested",
          "options": {
            "showFileHeader": false
          }
        }
      ]
    },
    "ts": {
      "transformGroup": "js",
      "buildPath": "./build/",
      "files": [
        {
          "destination": "tokens.d.ts",
          "format": "typescript/es6-declarations",
          "options": {
            "showFileHeader": true
          }
        }
      ]
    }
  }
}
